<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite">

    <TextView
        android:id="@+id/join_title"
        android:layout_width="360dp"
        android:layout_height="55dp"
        android:gravity="center"
        android:lineSpacingExtra="8sp"
        android:text="회원가입"
        android:textColor="@color/colorJoinTitle"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/join_title_under"
        android:layout_width="360dp"
        android:layout_height="1dp"
        android:background="@color/colorJoinAlpha"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/join_title" />

    <LinearLayout
        android:id="@+id/join_edit"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/join_title">

        <EditText
            android:id="@+id/join_id_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@null"
            android:hint="아이디를 입력해 주세요."
            android:inputType="text"
            android:maxLength="8"
            android:maxLines="1"
            android:textColor="@color/colorJoin"
            android:textColorHint="@color/colorUnderbarNone"
            android:textSize="16sp"
            app:layout_constraintHorizontal_bias="0.333"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/join_title" />

        <View
            android:id="@+id/join_id_under"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorUnderbarNone" />

        <TextView
            android:id="@+id/join_id_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            android:layout_marginTop="4dp"
            android:text="이메일을 확인해 주세요."
            android:textColor="@color/colorCheckLogin"
            android:textSize="10sp" />

        <EditText
            android:id="@+id/join_pw_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@null"
            android:hint="비밀번호 8자리 이상 입력해 주세요."
            android:inputType="textPassword"
            android:maxLength="8"
            android:maxLines="1"
            android:textColor="@color/colorJoin"
            android:textColorHint="@color/colorUnderbarNone"
            android:textSize="16sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/join_id_edit" />

        <View
            android:id="@+id/join_pw_under"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorUnderbarNone" />

        <TextView
            android:id="@+id/join_pw_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="비밀번호는 8자리이상 입력해 주세요."
            android:textColor="@color/colorCheckLogin"
            android:textSize="10sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/join_button"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="38dp"
        android:background="@drawable/login_disable"
        android:gravity="center"
        android:text="가입하기"
        android:textSize="14sp"
        android:lineSpacingExtra="-5sp"
        android:textColor="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/join_edit" />

</android.support.constraint.ConstraintLayout>